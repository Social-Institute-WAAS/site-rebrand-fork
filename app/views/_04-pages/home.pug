  - page.current = "home"

block main

  //- COVER
  section#home.cover.c-slider
    .c-slider-indicator
      span.dot(onclick="currentSlide(1)")
      span.dot(onclick="currentSlide(2)")
      span.dot(onclick="currentSlide(3)")

    .c-card.c-card--cover.mySlides.fadeFx(style="background-image:url(images/bg-cover.jpg)")
      .container
        h1.c-card__title
          | Tecnologia Fortalecendo Jovens

    .c-card.c-card--cover.mySlides.fadeFx(style="background-image:url(images/jovem-pesquisando.jpeg)")
